@{
    ViewData["Title"] = "Search All";
}

@if (ViewBag.errorMsg.Length > 0)
{
    <p>@ViewBag.errorMsg</p>
}
else
{
    <div class="text-left" style="background-color: #e9f1f4">
        <h4>Search All Recipes By:</h4>
    </div>

    <div class="text-center" style="background-color: #e9f1f4">
        <h3>Category</h3>
    </div>



    int j = 0;
    <div class="container-fluid">
        <div class="row">
            <div class="list-group list-group-horizontal-sm">
                @for (int i = 0; i < @ViewBag.displayCategory.Count; i++)
                {
                    <a class="list-group-item list-group-item-action list-group-item-primary" asp-area="" asp-controller="MealByCategory" asp-route-mycat=@ViewBag.displayCategory[i] asp-action="Index">@ViewBag.displayCategory[i]</a>
                    j = j + 1;

                    @if (j > 0 && j % 10 == 0)
                    {
                        // close the div and start again
                    @:</div><div class="list-group list-group-horizontal-sm">
                    }
                }

            </div>
        </div>

    </div>


    j = 0;
    <br />
    <div class="text-center" style="background-color: #e9f1f4">
        <h3>Country of Origin</h3>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="list-group list-group-horizontal-sm">
                @for (int i = 0; i < @ViewBag.displayOrigin.Count; i++)
                {
                    <a class="list-group-item list-group-item-action list-group-item-primary" asp-area="" asp-controller="MealByOrigin" asp-route-myorg=@ViewBag.displayOrigin[i] asp-action="Index">@ViewBag.displayOrigin[i]</a>
                    j = j + 1;

                    @if (j > 0 && j % 9 == 0)
                    {
                        // close the div and start again
                    @:</div><div class="list-group list-group-horizontal-sm">
                    }
                }
            </div>

        </div>

    </div>
}
